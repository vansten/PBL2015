<UserControl x:Class="AwesomeEngineEditor.Components.DisappearingTrash"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Width="260" Height="auto">
    <Grid>
        <TextBlock Text="Disappearing Trash" FontSize="26" FontWeight="Bold"/>
        <TextBlock Text="Trash Count: " FontSize="20" Margin="0, 40, 0, 0"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="125,40,0,0" TextWrapping="Wrap" Text="{Binding TrashCount}" VerticalAlignment="Top" Width="120"/>
    </Grid>
</UserControl>
